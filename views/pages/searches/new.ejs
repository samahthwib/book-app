<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../../layout/head') %>
</head>

<body>
  <header>
    <%- include('../../layout/header') %>
  </header>

  <main>

    <p id="saved-books">Search by Title or Author</p>
    <form action="/searches" method="POST">
      <input type="text" placeholder="Enter a title or author" name="search">

      <div class="first-radio">
        <label class="radio-one">
          <p class="title">Title</p>
          <input type="radio" name="search" value="title" />
        </label>
      </div>
      <div class="second-radio">
        <label class="radio-two">
          <p class="parg">Author</p>
          <input type="radio" name="search" value="authors" />
        </label>
      </div>
      <input type="submit" class="search-one" value="Search the Google Books API">
    </form>

  </main>

  <footer> <%- include('../../layout/footer') %> </footer>


</body>

</html>